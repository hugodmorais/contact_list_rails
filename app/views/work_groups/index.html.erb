<div class="row row_frameh">
    <div class="offset-3 col-lg-9">
        <div class="panel panel-border">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">Grupos Trabalho</h3>
                    <div class="btn-group pull-right">
                        <%= link_to 'Novo trabalho', new_work_group_path, class: 'btn btn-success' %>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
            <div class="panel-body">
                <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12 table-responsive">
                <table id="datatable" class="table table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Primeiro Nome</th>
                        <th>Ultimo Nome</th>
                        <th>Data Inicio</th>
                        <th>Data Final</th>
                        <th class="text-right">Ações</th>
                    </tr>
                    </thead>
                    <tbody>
                            <% if @work_groups.empty? %>
                            <tr>
                                <td colspan="4" class="text-center">
                                <h3>Sem Utilizadores cadastrados.</h3>
                            </tr>
                        <% end %>
                        <% @work_groups.each do |c| %>
                        <tr>
                        <td>
                            <%= c.id %>
                        </td>
                        <td>
                            <%= c.user_group&.first_name %>
                        </td>
                        <td>
                            <%= c.user_group&.last_name %>
                        </td>
                        <td>
                            <%= c.start_at %>
                        </td>
                        <td>
                            <%= c.end_at %>
                        </td>
                        <td class="text-right">
                            <%= link_to 'Editar', edit_work_group_path(c), class: 'btn btn-warning' %>
                            <%= link_to 'Excluir', work_group_path(c), method: :delete, class: 'btn btn-danger', data: { confirm: 'Tem certeza que deseja excluir?' } %>
                        </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <div>
                    <%= will_paginate @work_groups, :previous_label => 'Previous', class: "paginate", :next_label => 'Next' %>
                </div>
                </div>
            </div>
            </div>
        </div>
        </div>
    </div>
</div>
    