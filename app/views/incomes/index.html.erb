<!-- Start Breadcrumb -->
<% @current_bread_name = t('incomes.incomes') %>
<!-- End Breadcrumb -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="panel-title text-center">Receitas</h1>
  </div>
</div>
<div class="col-sm-12 col-xs-12 col-md-12 col-lg-12 table-responsive">
  <table id="incomes_table" class="table table-hover" data-url="<%= datatables_incomes_path %>">
    <div class="btn-group pull-left">
      <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg">
      Importar / Exportar
    </button>
      <%= link_to new_income_path, class: 'btn btn-success btn-sm waves-effect waves-light m-l-5 p-t-4' do %>
        <i class="m-l-5 fa fa-plus"></i>
        <%= t('incomes.new') %>
      <% end %>
    </div>
    <thead>
      <tr>
        <th>Id</th>
        <th>Mês</th>
        <th>Tipo</th>
        <th>Valor</th>
        <th>Ações</th>
      </tr>
    </thead>
  </table>
  <!-- Modal -->
  <div class="modal fade bd-example-modal-lg" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Importar / Exportar</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= form_tag import_incomes_path, multipart: true do %>
              <div class="col-lg-12">
                <div class="btn-group">
                  <%= file_field_tag :file, class: 'btn btn-outline-primary m-l-5' %>
                  <%= submit_tag 'Upload', class: 'btn btn-primary btn-sm waves-effect waves-light' %>
                  <span style="color: Tomato;">
                    <i class="fas fa-info-circle fa-2x p-t-4 p-l-5"></i>
                  </span>
                  <span class="p-t-10 p-l-5">Escolha o ficheiro das receitas!</span>
                </div>
              </div>
          <% end %>
        </div>
        <div class="modal-body">
          <div class="col-lg-12">
            <div class="btn-group" data-turbolinks="false">
              <%= link_to incomes_template_incomes_path, class: 'btn btn-primary m-l-5' do %>
                <%= 'Receitas' %>
                <i class="m-l-5 fas fa-cloud-download-alt"></i>
              <% end %>
              <span style="color: Tomato;">
                <i class="fas fa-info-circle fa-2x p-t-4 p-l-5"></i>
              </span>
              <span class="p-t-10 p-l-5">Faça download do ficheiro base das receitas!</span>
            </div>
          </div>
        </div>
        <div class="row p-t-30">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>





