<div class="row row_frameh">
    <div class="offset-3 col-lg-9">
      <div class="panel panel-border">
        <div class="row">
          <div class="col-lg-12">
            <div class="panel-heading">
              <h3 class="panel-title text-center">Receitas</h3>
              <div class="btn-group pull-right">
                <%= link_to 'Nova Receita', new_income_path, class: 'btn btn-success' %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <div class="panel-body">
              <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12 table-responsive">
                <table id="datatable" class="table table-hover">
                  <thead>
                    <tr>
                      <th>Id</th>
                      <th>Ano</th>
                      <th>Mês</th>
                      <th>Tipo</th>
                      <th>Valor</th>
                      <th class="text-right">Ações</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if @incomes.empty? %>
                      <tr>
                        <td colspan="4" class="text-center">
                          <h3>Sem gestão Anual cadastrada.</h3>
                          <%= link_to 'click aqui', new_income_path %> para cadastrar um novo ano
                        </td>
                      </tr>
                    <% end %>
                    <% @incomes.each do |c| %>
                      <tr>
                        <td>
                          <%= c.id %>
                        </td>
                        <td>
                          <%= c.annual_management.year %>
                        </td>
                        <td>
                          <%= Date::MONTHNAMES[c.month] %>
                        </td>
                        <td>
                          <%= c.income_category.name %>
                        </td>
                        <td>
                          <%= c.income_value %>
                        </td>
                        <td class="text-right">
                          <%= link_to 'Editar', edit_income_path(c), class: 'btn btn-warning' %>
                          <%= link_to 'Excluir', income_path(c), method: :delete, class: 'btn btn-danger', data: { confirm: 'Tem certeza que deseja excluir?' } %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <div>
                  <%= will_paginate @incomes, :previous_label => 'Previous', class: "paginate", :next_label => 'Next' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  