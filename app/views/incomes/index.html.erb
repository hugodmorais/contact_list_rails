<!-- Start Breadcrumb -->
<% @current_bread_name = t('incomes.incomes') %>
<!-- End Breadcrumb -->

<div class="row row_frameh">
    <div class="offset-1 col-lg-10">
      <div class="panel panel-border">
        <div class="row">
          <div class="col-lg-12">
            <div class="panel-heading">
              <h1 class="panel-title text-center">Receitas</h1>
              <div class="btn-group pull-right">
                <%= link_to new_income_path, class: 'btn btn-success btn-sm waves-effect waves-light' do %>
                  <i class="m-l-5 fa fa-plus"></i>
                  <%= t('incomes.new') %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <div class="panel-body">
              <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12 table-responsive">
                <table id="incomes_table" class="table table-hover" data-url="<%= datatables_incomes_path %>">
                  <thead>
                    <tr>
                      <th>Id</th>
                      <th>Ano</th>
                      <th>Mês</th>
                      <th>Tipo</th>
                      <th>Valor</th>
                      <th>Ações</th>
                    </tr>
                  </thead>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
  