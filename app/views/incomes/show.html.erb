<div class="row mb-3">
  <div class="container text-center">
    <div class="row">
      <div class="col">
        <h4>Receita</h4>
      </div>
    </div>
  </div>
</div>
 <div class="row px-5">
  <div class="col-lg-12">
    <div class="panel-body px-5">
      <div class="container pt-4">
        <form class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label"><%= t(:user) %></label>
            <div class="col-sm-10">
              <p class="form-control-static"><%= @income.user_group&.name %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Ano:</label>
            <div class="col-sm-10">
              <p class="form-control-static"><%= @income.annual_management.year %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Mês:</label>
            <div class="col-sm-10">
              <p class="form-control-static"><%= t('date.month_names')[@income.month] %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Tipo:</label>
            <div class="col-sm-10">
              <p class="form-control-static"><%= @income.income_category&.name %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Origem:</label>
            <div class="col-sm-10">
              <p class="form-control-static"><%= @income.company&.name %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Valor:</label>
            <div class="col-sm-10">
              <p class="form-control-static"><%= number_to_currency(@income.income_value) %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Comentário:</label>
            <div class="col-sm-10">
              <p class="form-control-static"><%= @income.comment %></p>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-9 m-t-15">
              <%= link_to "Sair", incomes_path, class: "btn btn-white btn-sm waves-effect m-l-5" %>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>










