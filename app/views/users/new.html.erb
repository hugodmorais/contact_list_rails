<div class="row">
  <div class="offset-1 col-lg-12">
    <div class="panel panel-border panel-custom">
      <div class="panel-heading">
        <h3 class="panel-title text-center">Adicionar Novo Utilizador</h3>
      </div>
      <div class="panel-body">
          <%= form_for @user do |f| %>
          <%= render 'form', f: f %>
    
          <%= f.submit 'Guardar', class: 'btn btn-primary' %>
          <%= link_to "Cancelar", users_path, class: "btn btn-white btn-sm waves-effect m-l-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
  
  