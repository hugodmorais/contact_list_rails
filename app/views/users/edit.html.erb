<%= form_for current_user do |f| %>
  <div class="row mb-3">
    <div class="container text-center">
      <div class="row">
        <div class="col">
          <h4>Editar Utilizador</h4>
        </div>
      </div>
    </div>
  </div>
  <div class="row px-5">
    <div class="col-lg-12">
      <div class="panel-body px-5">
        <div class="container pt-4">
          <div class="form-group">  
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password, class: 'form-control' %>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-10 m-t-15">
              <%= f.submit 'Guardar', class: 'btn btn-primary btn-sm' %>
              <%= link_to "Cancelar", users_path, class: "btn btn-white btn-sm waves-effect m-l-5" %>
            </div>
          </div>  
        </div>
      </div>
    </div>
  </div>
<% end %>


         
  