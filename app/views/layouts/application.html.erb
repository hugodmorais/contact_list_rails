<!DOCTYPE html>
<html>
  <head>
    <title>Frameh</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" href="https://formden.com/static/cdn/bootstrap-iso.css" />

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css"/>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body >
    <div class="content-page" id="page" data-controller="<%= controller_name %>" data-action="<%= action_name %>" data-locale="<%= locale %>">
      <% if user_signed_in? %>
        <div class="col-lg-12 p-r-40">
          <%= yield %>
          <%# <div class="col-sm-offset-2 col-lg-10 panel panel-body m-t-30">
            <%= yield %>
          <%# </div>
          <div class="col-lg-3">
            <%= render 'layouts/sidebar' %>
          <%# </div> %> %> %>
        </div> 
      <% else %>
        <div class="login_page full-height">
          <div class="d-flex justify-content-center">
            <div class="card">
              <div class="card-header cardLogin">
                <h3>Entrar</h3>
              </div>
              <div class="card-body">
                <%= form_for :session, url: entrar_path, method: :post do |f| %>
                  <div class="input-group form-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="fa fa-user"></i></span>
                      <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
                    </div>
                    
                  </div>
                  <div class="input-group form-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="fa fa-key"></i></span>
                      <%= f.password_field :password, placeholder: 'Palavra-passe', class: 'form-control' %>
                    </div>
                  </div>
                  <div class="row align-items-center remember">
                    <input type="checkbox">Lembrar-me
                  </div>
                  <div class="form-group">
                      <%= f.submit 'Entrar', class: 'btn float-right login_btn' %>
                  </div>
                  <% end %>
              </div>
              <div class="card-footer">
                <div class="d-flex justify-content-center links">
                  NÃ£o tem conta?<%= link_to 'Registe-se', new_user_path %>
                </div>
                <div class="d-flex justify-content-center">
                  <a href="#">Esqueceu a palavra-passe?</a>
                </div>
              </div>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </body>
</html>
