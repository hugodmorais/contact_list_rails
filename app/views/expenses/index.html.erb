<div class="row mb-3">
  <div class="container text-center">
    <div class="row">
      <div class="col">
        <h4>Despesas</h4>
      </div>
    </div>
  </div>
</div>
<div class="row px-5">
  <div class="col-lg-12">
    <div class="panel-body px-5">
      <div class="btn-group pull-left pl-5 pt-4">
        <button type="button" class="btn btn-primary" data-micromodal-trigger="modal-1">
          <i class="fas fa-cloud-upload-alt"></i>
        </button>
        <%= link_to new_expense_path, class: 'btn btn-success btn-sm waves-effect waves-light m-l-5 p-t-4' do %>
          <i class="m-l-5 fa fa-plus"></i>
          <%= t('expenses.new') %>
        <% end %>
      </div>
      <div class="col-xs-12 table-responsive px-5 pt-4">
        <table id="expenses-datatable" class="table table-hover datatables" data-source="<%= expenses_path(format: :json) %>">
          <thead>
            <tr>
              <th>Ano</th>
              <th>Mês</th>
              <th>Ações</th>
            </tr>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>

<%= render 'expenses/modal' %>
