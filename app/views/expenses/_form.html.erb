<%= form_for @expense do |f| %>
<%= render 'layouts/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :user_group_id do %>
    <%= t(:user) %></span>
    <% end %>
    <%= f.collection_select :user_group_id, @user_groups, :id, :first_name, {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :annual_management_id do %>
    <%= t(:year) %></span>
    <% end %>
    <%= f.collection_select :annual_management_id, @annual_managements, :id, :year, {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :month do %>
      <%= t(:month) %></span>
    <% end %>
    <%= f.select :month, nil, { }, class: 'form-control' do %>
      <%= options_for_select Date::MONTHNAMES.each_with_index.collect{|m, i| [m, i]}%>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :expense_category_id do %>
    <%= t('expenses.expense_kind') %></span>
    <% end %>
    <%= f.collection_select :expense_category_id, @expense_categories, :id, :name, {}, class: 'form-control' %>
  
    <%= f.label :expense_value do %>
      <%= t(:value) %></span>
    <% end %>
    <%= f.text_field :expense_value, class: 'form-control', rows: "10" %>
  </div>

  <%= f.submit 'Guardar', class: 'btn btn-primary' %>
  <%= link_to "Cancelar", expenses_path, class: "btn btn-white btn-sm waves-effect m-l-5" %>

  <% end %>
