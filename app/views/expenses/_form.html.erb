<%= form_for @expense do |f| %>
<%= render 'layouts/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :user_group_id do %>
    <%= t(:user) %></span>
    <% end %>
    <%= f.collection_select :user_group_id, @user_groups, :id, :first_name, {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :annual_management_id do %>
    <%= t(:year) %></span>
    <% end %>
    <%= f.collection_select :annual_management_id, @annual_managements, :id, :year, {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :month do %>
      <%= t(:month) %></span>
    <% end %>
    <%= f.select :month, nil, { }, class: 'form-control' do %>
      <%= options_for_select Date::MONTHNAMES.each_with_index.collect{|m, i| [m, i]}%>
    <% end %>
  </div>

  <div class="form-group" style="margin-top: 20px;">
    <h6 class="col-sm-6"><%= t :expense_kind %> <span class="text-danger">*</span></h6>
    <h6 class="col-sm-5"><%= t :access %> <span class="text-danger">*</span></h6>
    <h6 class="col-sm-1"><%= t :actions %></h6>
  </div>
  <div id="permissions" class="select_row">
    <%= f.fields_for :expense_groups do |w| %>
      <%= render partial: 'expense_group_fields',locals: { f: w } %>
    <% end %>
  </div>
  <div class="form-group">
    <div class=" col-sm-10">
      <%= link_to_add_fields f, :expense_groups, {}, id: 'new_permission' do %>
        <i class="fa fa-plus-square"></i>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class=" col-sm-10">
      <%= f.submit 'Guardar', class: 'btn btn-primary' %>
      <%= link_to "Cancelar", expenses_path, class: "btn btn-white btn-sm waves-effect m-l-5" %>
</div>
</div>

  <% end %>
