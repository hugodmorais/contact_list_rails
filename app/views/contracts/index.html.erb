<!-- Start Breadcrumb -->
<% @current_bread_name = t('contracts.contracts') %>
<!-- End Breadcrumb -->
<div class="row row_index">
  <div class="offset-1 col-lg-10">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="panel-title text-center">Contratos</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="panel-body">
          <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12 table-responsive">
            <table id="contracts_table" class="table table-hover" data-url="<%= datatables_contracts_path %>">
              <div class="btn-group pull-left">
                <%= link_to new_contract_path, class: 'btn btn-success btn-sm waves-effect waves-light' do %>
                  <i class="m-l-5 fa fa-plus"></i>
                  <%= t('contracts.new') %>
                <% end %>
              </div>
              <thead>
                <tr>
                  <th>Id</th>
                  <th>Nome</th>
                  <th>Numero</th>
                  <th>Descrição</th>
                  <th>Data de Inicio</th>
                  <th>Data de Fim</th>
                  <th>Estado</th>
                  <th>Utilizador</th>
                  <th>Empresa</th>
                  <th>Ações</th>
                </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
  