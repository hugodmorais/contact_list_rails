<!-- Start Breadcrumb -->
<% @current_bread_name = t('works.works') %>
<!-- End Breadcrumb -->

<div class="row row_frameh">
  <div class="offset-1 col-lg-10">
    <div class="panel panel-border">
      <div class="row">
        <div class="col-lg-12">
          <div class="panel-heading">
            <h1 class="panel-title text-center">Empresas</h1>
            <div class="btn-group pull-right">
              <%= link_to new_work_path, class: 'btn btn-success btn-sm waves-effect waves-light' do %>
                <i class="m-l-5 fa fa-plus"></i>
                <%= t('works.new') %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="panel-body">
            <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12 table-responsive">
              <table id="datatable" class="table table-hover">
                <thead>
                  <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Cidade</th>
                    <th>Pais</th>
                    <th class="text-right">Ações</th>
                  </tr>
                </thead>
                <tbody>
                  <% unless @works.present? %>
                    <tr>
                      <td colspan="4" class="text-center">
                        <h3>Sem Empresas cadastradas.</h3>
                        <%= link_to 'click aqui', new_work_path %> para cadastrar um novo ano
                      </td>
                    </tr>
                  <% end %>
                  <% @works.each do |work| %>
                    <tr>
                      <td>
                        <%= work.id %>
                      </td>
                      <td>
                        <%= work.name %>
                      </td>
                      <td>
                        <%= work.city %>
                      </td>
                      <td>
                        <%= work.country %>
                      </td>
                      <td class="text-right">
                        <%= link_to work_path(work) do %>
                          <i class="fas fa-eye"></i>
                        <% end %>
                        <%= link_to edit_work_path(work) do %>
                          <i class="fas fa-edit"></i>
                        <% end %>
                        <%= link_to work_path(work), method: :delete, data: { confirm: t(:remove_question)} do %>
                          <i class="fas fa-trash-alt"></i>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <div>
                <%= will_paginate @works, :previous_label => 'Previous', class: "paginate", :next_label => 'Next' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>