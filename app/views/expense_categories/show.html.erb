<div class="row mb-3">
  <div class="container text-center">
    <div class="row">
      <div class="col">
        <h4>Categoria: <%= @expense_category.name %></h4>
      </div>
    </div>
  </div>
</div>
 <div class="row px-5">
  <div class="col-lg-12">
    <div class="panel-body px-5">
      <div class="container pt-4">
        <form class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label">Nome:</label>
            <div class="col-sm-10">
              <p class="form-control-static"><%= @expense_category.name %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Categoria Principal?</label>
            <div class="col-sm-10">
              <p class="form-control-static"><%= show_primary_payment(@expense_category.primary_payment) %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Icon:</label>
            <div class="col-sm-10">
              <p class="form-control-static"><i class="<%= @expense_category.icon %>"></i></p>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-9 m-t-15">
              <%= link_to "Sair", expense_categories_path, class: "btn btn-white btn-sm waves-effect m-l-5" %>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>








