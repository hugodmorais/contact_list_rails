<!-- Start Breadcrumb -->
<% @bread_links = [link_to(t('imports.imports'), imports_url)] %>
<!-- End Breadcrumb -->

<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-border panel-custom">
      <div class="panel-heading">
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-xs-12 table-responsive">
            <form class="form-horizontal">
              <div class="form-group">
                <label class="col-sm-2 control-label"><%= t(:id) %></label>
                <div class="col-sm-10">
                  <p class="form-control-static"><%= @import.id %></p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">Tipo de Importação</label>
                <div class="col-sm-10">
                  <p class="form-control-static"><%= t @import.kind_desc %></p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">Descrição do Erro</label>
                <div class="col-sm-10">
                  <p class="form-control-static"><%= @import.error_description  %></p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">Detalhes do erro</label>
                <div class="col-sm-10">
                  <p class="form-control-static">
                    <% @import.error_details.to_s.split("\n").each do |error_detail|  %>
                      <%= error_detail %><br>
                    <% end %>
                  </p>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-2 control-label">
                  <%= link_to t(:go_back), imports_url, class: "btn btn-primary btn-sm waves-effect" %>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-12">
                  <div class="panel panel-border">
                    <div class="row">
                      <div class="col-lg-12">
                        <div class="panel-heading">
                          <h5 class="m-t-0 text-center">Erros de Importação</h5>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-lg-12">
                        <div class="panel-body">
                          <div class="row">
                            <div class="col-xs-12 table-responsive">
                              <table id="import_errors_datatable" class="table table-hover" data-url="<%= import_errors_import_path(@import) %>">
                                <thead>
                                  <tr>
                                    <th>Folha</th>
                                    <th>Número da linha</th>
                                    <th>Descrição</th>
                                  </tr>
                                </thead>
                              </table>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
