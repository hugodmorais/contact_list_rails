<!-- Start Breadcrumb -->
<% @bread_links = [link_to(t('imports.imports'), imports_url)] %>
<!-- End Breadcrumb -->

<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-border panel-custom">
      <div class="panel-heading">
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-xs-12 table-responsive">
            <form class="form-horizontal">
              <div class="form-group">
                <label class="col-sm-2 control-label"><%= t(:id) %></label>
                <div class="col-sm-10">
                  <p class="form-control-static"><%= @import.id %></p>
                </div>
              </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label">Job</label>
                  <div class="col-sm-10">
                    <p class="form-control-static"><%= @import.job_id %></p>
                  </div>
                </div>
              <div class="form-group">
                <label class="col-sm-2 control-label"><%= t(:kind) %></label>
                <div class="col-sm-10">
                  <p class="form-control-static"><%= t @import.kind_desc, scope: :imports %></p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label"><%= t(:error_description) %></label>
                <div class="col-sm-10">
                  <p class="form-control-static"><%= @import.error_description  %></p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label"><%= t(:error_details) %></label>
                <div class="col-sm-10">
                  <p class="form-control-static">
                    <% @import.error_details.to_s.split("\n").each do |error_detail|  %>
                      <%= error_detail %><br>
                    <% end %>
                  </p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label"><%= t(:file) %></label>
                <div class="col-sm-10">
                  <p class="form-control-static">
                    <%= link_to @import.file.filename, download_import_path(@import), 'data-turbolinks': false if @import.file.present? %>
                    <%= link_to @import.file.filename, rails_blob_path(@import.file, disposition: "attachment") %>
                  </p>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-12">
                  <div class="panel panel-border">
                    <div class="row">
                      <div class="col-lg-12">
                        <div class="panel-heading">
                          <h5 class="m-t-0 text-center"><%= t 'imports.import_errors' %></h5>
                          <hr>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-lg-12">
                        <div class="panel-body">
                          <div class="row">
                            <div class="col-xs-12 table-responsive">
                              <table id="import_errors_datatable" class="table table-hover" data-url="<%= import_errors_import_path(@import) %>">
                                <thead>
                                  <tr>
                                    <th><%= t(:sheet) %></th>
                                    <th><%= t(:row_number) %></th>
                                    <th><%= t(:description) %></th>
                                  </tr>
                                </thead>
                              </table>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

                <div class="row">
                  <div class="col-lg-12">
                    <div class="panel panel-border">
                      <div class="row">
                        <div class="col-lg-12">
                          <div class="panel-heading">
                            <h5 class="m-t-0 text-center"><%= t 'statistic_batches.statistic_batches' %></h5>
                            <hr>
                          </div>
                        </div>
                      </div>
                      
                    </div>
                  </div>
                </div>

              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-9 m-t-15">
                  <%= link_to t(:go_back), imports_url, class: "btn btn-white btn-sm waves-effect" %>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
