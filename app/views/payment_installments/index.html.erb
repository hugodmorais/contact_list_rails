<!-- Start Breadcrumb -->
<% @current_bread_name = t('payment_installments.payment_installments') %>
<!-- End Breadcrumb -->
<div class="row row_index">
  <div class="offset-1 col-lg-10">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="panel-title text-center">Pagamentos Parcelas</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="panel-body">
          <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12 table-responsive">
            <table id="payment_installments_table" class="table table-hover" data-url="<%= datatables_payment_installments_path %>">
              <div class="btn-group pull-left">
                <%= link_to new_payment_installment_path, class: 'btn btn-success btn-sm waves-effect waves-light' do %>
                  <i class="m-l-5 fa fa-plus"></i>
                  <%= t('payment_installments.new') %>
                <% end %>
              </div>
              <thead>
                <tr>
                  <th>Id</th>
                  <th>Nome</th>
                  <th>Nº Parcelas</th>
                  <th>Valor total</th>
                  <th>Entidade</th>
                  <th>Valor Mensal</th>
                  <th>Valor já Pago</th>
                  <th class="text-right">Ações</th>
                </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
  