<% if user_signed_in? %>
<div class="row row_frameh">
<div class="offset-3 col-lg-9">
    <div class="panel panel-border">
        <div class="row ">
            <div class="col-lg-12">
                <div class="panel-body">
              <div class="card">
                <div class="card-body">
                    <h5>Utilizadores Registados</h5>
                    <hr>
                    <% @user_groups.each_with_index  do |c, index| %>
                        <tr>
                            <strong>Utilizador:</strong> <%= c.first_name %> <%= c.last_name %>
                            <%= image_tag( c.image, class: "rotate90 img-circle", size: "60x60") if c.image.attached? %>

                            <% if c.incomes.any? %>
                              <span class="badge badge-pill badge-primary"><%= c.incomes_sum(c) %></span>
                            <% end %>
                            <br>
                          </tr>
                          <% unless index == @user_groups.size - 1 %>
                          <hr>
                          <% end %>
                         
                    <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
    </div>
</div>
</div>
<% else %>
<div class="container">
    <div class="d-flex justify-content-center h-100">
      <div class="card">
        <div class="card-header">
          <h3>Entrar</h3>
          <div class="d-flex justify-content-end social_icon">
            <span><i class="fab fa-facebook-square"></i></span>
            <span><i class="fab fa-google-plus-square"></i></span>
            <span><i class="fab fa-twitter-square"></i></span>
          </div>
        </div>
        <div class="card-body">
          <%= form_for :session, url: entrar_path, method: :post do |f| %>
            <div class="input-group form-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-user"></i></span>
                <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
              </div>
              
            </div>
            <div class="input-group form-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-key"></i></span>
                <%= f.password_field :password, placeholder: 'Palavra-passe', class: 'form-control' %>
              </div>
            </div>
            <div class="row align-items-center remember">
              <input type="checkbox">Lembrar-me
            </div>
            <div class="form-group">
                <%= f.submit 'Entrar', class: 'btn float-right login_btn' %>
            </div>
            <% end %>
        </div>
        <div class="card-footer">
          <div class="d-flex justify-content-center links">
            NÃ£o tem conta?<%= link_to 'Registe-se', new_user_path %>
          </div>
          <div class="d-flex justify-content-center">
            <a href="#">Esqueceu a palavra-passe?</a>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
        
        