          <div class="col-md-4">
            <div class="">
              <div id="results_partial" data-url="<%= highcharts_results_partial_path %>"></div>
            </div>
          </div>
        </div>
      </div>
      <div id="menu1" class="tab-pane">
        <h3>Menu 1</h3>
       
      </div>
      <div id="menu2" class="tab-pane fade">
