<% if user_signed_in? %>
<div class="container">
  <div class="row row_frameh">
    <div class="col-lg-3 col-sm-6">
      <div class="widget-inline-box text-center">
        <h3>
          <span class="glyphicon glyphicon glyphicon-ok-sign" aria-hidden="true" style="font-size:20px;color:blue;"></span> 
          <b data-plugin="counterup">
            <%= Income.where(annual_management: AnnualManagement.where(year: Time.zone.now.year)).sum('income_value') %>
          </b>
        </h3>
        <h4 class="text-muted">Total Receitas</h4>
      </div>
    </div>
    <div class="col-lg-3 col-sm-6">
      <div class="widget-inline-box text-center">
        <h3>
          <span class="glyphicon glyphicon-adjust" aria-hidden="true" style="font-size:20px;color:red;"></span> 
          <b data-plugin="counterup">
            <%= Expense.where(annual_management: AnnualManagement.where(year: Time.zone.now.year)).includes(:expense_groups).sum('expense_value') %>
          </b>
        </h3>
        <h4 class="text-muted">Total Despesas</h4>
      </div>
    </div>
    <div class="col-lg-3 col-sm-6">
      <div class="widget-inline-box text-center">
        <h3><span class="glyphicon glyphicon glyphicon-info-sign" aria-hidden="true" style="font-size:20px;color:yellow;"></span> <b data-plugin="counterup"><%= @user_groups.size %></b></h3>
        <h4 class="text-muted">Parcialmente atingidos</h4>
      </div>
    </div>
    <div class="col-lg-3 col-sm-6">
      <div class="widget-inline-box text-center b-0">
        <h3><span class="glyphicon glyphicon glyphicon-exclamation-sign" aria-hidden="true" style="font-size:20px;color:green;"></span> <b data-plugin="counterup"><%= @user_groups.size %></b></h3>
        <h4 class="text-muted">Não atingidos</h4>
      </div>
    </div>
  </div>  
