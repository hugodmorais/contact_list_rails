<% if user_signed_in? %>
  <div class="row row_frameh">
    <div class="col-lg-3 col-sm-6">
      <div class="widget-inline-box text-center">
        <h3><i class="text-primary md md-add-shopping-cart"></i> <b data-plugin="counterup"><%= Income.sum('income_value') %></b></h3>
        <h4 class="text-muted">Total Receitas</h4>
      </div>
    </div>
    <div class="col-lg-3 col-sm-6">
      <div class="widget-inline-box text-center">
        <h3><i class="text-custom md md-attach-money"></i> <b data-plugin="counterup"><%= ExpenseGroup.sum('expense_value') %></b></h3>
        <h4 class="text-muted">Total Despesas</h4>
      </div>
    </div>
    <div class="col-lg-3 col-sm-6">
      <div class="widget-inline-box text-center">
        <h3><i class="text-warning md md-account-child"></i> <b data-plugin="counterup"><%= @user_groups.size %></b></h3>
        <h4 class="text-muted">Parcialmente atingidos</h4>
      </div>
    </div>
    <div class="col-lg-3 col-sm-6">
      <div class="widget-inline-box text-center b-0">
        <h3><i class="text-danger md md-visibility"></i> <b data-plugin="counterup"><%= @user_groups.size %></b></h3>
        <h4 class="text-muted">Não atingidos</h4>
      </div>
    </div>
    <div class="col-lg-8 row_chart"> 
      <%= results_dashboard_path(current_user) %>
      <%= column_chart results_dashboard_path(current_user), id: 'container', 
          ytitle: "Salario", 
          xtitle: "Meses", 
          title: 'Analise Receitas vs Despesas',
          chartOptions: {
            legend: {
                enabled: false
            }
          }
       %> 
    </div>  
  </div>
<% else %>
  <div class="container">
    <div class="d-flex justify-content-center h-100">
      <div class="card">
        <div class="card-header">
          <h3>Entrar</h3>
        </div>
        <div class="card-body border border-black">
          <%= form_for :session, url: entrar_path, method: :post do |f| %>
            <div class="input-group form-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-user"></i></span>
                <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
              </div>              
            </div>
            <div class="input-group form-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-key"></i></span>
                <%= f.password_field :password, placeholder: 'Palavra-passe', class: 'form-control' %>
              </div>
            </div>
            <div class="row align-items-center remember">
              <input type="checkbox">Lembrar-me
            </div>
            <div class="form-group">
              <%= f.submit 'Entrar', class: 'btn float-right login_btn' %>
            </div>
          <% end %>
        </div>
        <div class="card-footer">
          <div class="d-flex justify-content-center links">
            Não tem conta?<%= link_to 'Registe-se', new_user_path %>
          </div>
          <div class="d-flex justify-content-center">
            <a href="#">Esqueceu a palavra-passe?</a>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
        
        