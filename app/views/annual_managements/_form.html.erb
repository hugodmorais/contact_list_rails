<%= form_for annual_management do |f| %>

   <div class="row">
    <div class="offset-1 col-lg-10">
      <div class="form-group col-md-12 <%= 'has-error' if annual_management.errors['year'].present? %>">  
        <%= f.label :year do %>
          <%= t(:year) %>
        <% end %>
        <%= f.number_field :year, class: 'form-control' %>
        <% if annual_management.errors['year'].present? %>
          <span class="help-block text-danger">
            <small><%= annual_management.errors['year'].first %></small>
          </span>
        <% end %>
      </div>
      <div class="form-group col-md-12">
        <%= f.label :description do %>
          <%= t(:description) %></span>
        <% end %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
      <div class="row col-md-12">
        <div class="col-sm-10 m-t-15">
          <%= f.submit 'Guardar', class: 'btn btn-primary' %>
          <%= link_to "Cancelar", annual_managements_path, class: "btn btn-white btn-sm waves-effect m-l-5" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
