<!-- Start Breadcrumb -->
<% @current_bread_name = t('annual_managements.annual_managements') %>
<!-- End Breadcrumb -->

<div class="row row_frameh">
  <div class="offset-1 col-lg-10">
    <div class="panel panel-border">
      <div class="row">
        <div class="col-lg-12">
          <div class="panel-heading">
            <h1 class="panel-title text-center">Gestão Anual</h1>
            <div class="btn-group pull-right">
              <%= link_to new_annual_management_path, class: 'btn btn-success btn-sm waves-effect waves-light' do %>
                <i class="m-l-5 fa fa-plus"></i>
                <%= t('annual_managements.new') %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="panel-body">
            <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12 table-responsive">
              <table id="datatable" class="table table-hover">
                <thead>
                  <tr>
                    <th>Id</th>
                    <th>Ano</th>
                    <th>Descrição</th>
                    <th class="text-right">Ações</th>
                  </tr>
                </thead>
                <tbody>
                  <% unless @annual_managements.present? %>
                    <tr>
                      <td colspan="4" class="text-center">
                        <h3>Sem gestão Anual cadastrada.</h3>
                        <%= link_to 'click aqui', new_annual_management_path %> para cadastrar um novo ano
                      </td>
                    </tr>
                  <% end %>
                  <% @annual_managements.each do |annual_management| %>
                    <tr>
                      <td>
                        <%= annual_management.id %>
                      </td>
                      <td>
                        <%= annual_management.year %>
                      </td>
                      <td>
                        <%= annual_management.description %>
                      </td>
                      <td class="text-right">
                        <%= link_to annual_management_path(annual_management) do %>
                          <i class="fas fa-eye"></i>
                        <% end %>
                        <%= link_to edit_annual_management_path(annual_management) do %>
                          <i class="fas fa-edit"></i>
                        <% end %>
                        <%= link_to annual_management_path(annual_management), method: :delete, data: { confirm: t(:remove_question)} do %>
                          <i class="fas fa-trash-alt"></i>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <div>
                <%= will_paginate @annual_managements, :previous_label => 'Previous', class: "paginate", :next_label => 'Next' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>







