<!-- Campos de preenchimento do formulario -->
<div class="row">
    <div class="col-xs-12 table">

  <%= render 'layouts/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  
  <div class="form-group">
    <%= f.label :genre %>
    <%= f.select :genre, nil, { include_blank: true}, class: 'form-control' do %>
      <%= options_for_select UserGroup::GENRES.map { |desc, index| [t(desc), index] }, @user_group.genre %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :birth_date %>
    <%= f.date_field :birth_date, class: 'form-control', id: 'date' %>
  </div>
</div>
</div>


