<%= form_for company do |f| %>
  <div class="form-group <%= 'has-error' if company.errors['name'].present? %>">
    <%= f.label :name do %>
      <%= t(:name) %></span>
    <% end %>
    <%= f.text_field :name, class: 'form-control' %>
    <% if company.errors[:name].present? %>
      <span class="help-block text-danger">
        <small><%= company.errors[:name].first %></small>
      </span>
    <% end %>
  </div>
  <div class="form-group <%= 'has-error' if company.errors['city'].present? %>">
    <%= f.label :city do %>
      <%= t(:city) %></span>
    <% end %>
    <%= f.text_field :city, class: 'form-control' %>
    <% if company.errors[:city].present? %>
      <span class="help-block text-danger">
        <small><%= company.errors[:city].first %></small>
      </span>
    <% end %>
  </div>
  <div class="form-group <%= 'has-error' if company.errors['country'].present? %>">
    <%= f.label :country do %>
      <%= t(:country) %></span>
    <% end %>
    <%= f.text_field :country, class: 'form-control' %>
    <% if company.errors[:country].present? %>
      <span class="help-block text-danger">
        <small><%= company.errors[:country].first %></small>
      </span>
    <% end %>
  </div>
  <div class="row">
    <div class="col-sm-10 m-t-15">
      <%= f.submit 'Guardar', class: 'btn btn-primary' %>
      <%= link_to "Cancelar", incomes_path, class: "btn btn-white btn-sm waves-effect m-l-5" %>
    </div>
  </div> 
<% end %>
