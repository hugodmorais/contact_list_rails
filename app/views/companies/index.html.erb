<!-- Start Breadcrumb -->
<% @current_bread_name = t('companies.companies') %>
<!-- End Breadcrumb -->
<div class="row">
  <div class="col-lg-12">
    <div class="col-lg-12">
      <h1 class="panel-title text-center">Empresas</h1>
    </div>
    <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12 table-responsive">
      <table id="companies_table" class="table table-hover" data-url="<%= datatables_companies_path %>">
        <div class="btn-group pull-left">
          <%= link_to new_company_path, class: 'btn btn-success btn-sm waves-effect waves-light' do %>
            <i class="m-l-5 fa fa-plus"></i>
            <%= t('companies.new') %>
          <% end %>
        </div>
        <thead>
          <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Cidade</th>
            <th>Pais</th>
            <th>Ações</th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>
