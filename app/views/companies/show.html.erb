<!-- Start Breadcrumb -->
<% @bread_links = [link_to(t('companies.companies'), companies_path)] %>
<% @current_bread_name = @company.name %>
<!-- End Breadcrumb -->

<div class="row row_frameh">
  <div class="offset-2 col-xs-9">
    <div class="panel panel-border panel-custom">
      <div class="panel-heading">
        <h1 class="panel-title text-center">Empresa</h1>
      </div>
      <div class="panel-body">
        <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12 table-responsive">
          <form class="form-horizontal">
            <div class="form-group">
              <label class="col-sm-2 control-label"><%= t(:name) %></label>
              <div class="col-sm-10">
                <p class="form-control-static"><%= @company.name %></p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Cidade:</label>
              <div class="col-sm-10">
                <p class="form-control-static"><%= @company.city %></p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Pais:</label>
              <div class="col-sm-10">
                <p class="form-control-static"><%= @company.country %></p>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-9 m-t-15">
                  <%= link_to "Sair", companies_path, class: "btn btn-white btn-sm waves-effect m-l-5" %>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>