<!-- Start Breadcrumb -->
<% @current_bread_name = t('financial_statements.financial_statements') %>
<!-- End Breadcrumb -->
<div class="row">
  <div class="col-lg-12">
    <div class="col-lg-12">
      <h1 class="panel-title text-center">Fecho do mês</h1>
    </div>
    <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12 table-responsive">
      <table id="financial_statements_table" class="table table-hover" data-url="<%= datatables_financial_statements_path %>">
        <div class="btn-group pull-left">
          <%= link_to new_financial_statement_path, class: 'btn btn-success btn-sm waves-effect waves-light' do %>
            <i class="m-l-5 fa fa-plus"></i>
            <%= t('financial_statements.new') %>
          <% end %>
        </div>
        <thead>
          <tr>
            <th>Id</th>
            <th>Mês</th>
            <th>Conta</th>
            <th>Ações</th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>
