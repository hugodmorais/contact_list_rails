<div class="row row_frameh">
  <div class="offset-1 col-lg-10">
    <div class="panel panel-border">
      <div class="row">
        <div class="col-lg-12">
          <div class="panel-heading">
            <h1 class="panel-title text-center">Categorias das Receitas</h1>
              <div class="btn-group pull-right">
                <%= link_to new_income_category_path, class: 'btn btn-success btn-sm waves-effect waves-light' do %>
                  <i class="m-l-5 fa fa-plus"></i>
                  <%= t('income_categories.new') %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <div class="panel-body">
              <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12 table-responsive">
                <table id="income_categories_table" class="table table-hover" data-url="<%= datatables_income_categories_path %>">
                  <thead>
                    <tr>
                      <th>Id</th>
                      <th>Nome</th>
                      <th class="text-right">Ações</th>
                    </tr>
                  </thead>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
  