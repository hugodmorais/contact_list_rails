<!-- Start Breadcrumb -->
<% @bread_links = [link_to(t('accounts.accounts'), accounts_path)] %>
<% @current_bread_name = @account.name %>
<!-- End Breadcrumb -->
<div class="row">
  <div class="col-xs-12">
    <div class="panel-heading">
      <h1 class="panel-title text-center">Estado do Contrato</h1>
    </div>
    <div class="panel-body">
      <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12 table-responsive">
        <form class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label"><%= t(:name) %></label>
            <div class="col-sm-10">
              <p class="form-control-static"><%= @account.name %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">País:</label>
            <div class="col-sm-10">
              <p class="form-control-static"><%= @account.country %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Conta Principal?</label>
            <div class="col-sm-10">
              <p class="form-control-static">
                <% if @account.main_account? %>
                  <i class="fa fa-check"></i>
                <% end %>
              </p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Conta de C. Crédito?</label>
            <div class="col-sm-10">
              <p class="form-control-static">
                <% if @account.credit_account? %>
                  <i class="fa fa-check"></i>
                <% end %>
              </p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Conta Poupança?</label>
            <div class="col-sm-10">
              <p class="form-control-static">
                <% if @account.savings_account? %>
                  <i class="fa fa-check"></i>
                <% end %>
              </p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Descrição:</label>
            <div class="col-sm-10">
              <p class="form-control-static"><%= @account.description %></p>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-9 m-t-15">
                <%= link_to "Sair", accounts_path, class: "btn btn-white btn-sm waves-effect m-l-5" %>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

