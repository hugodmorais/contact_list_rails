<div class="row mb-3">
  <div class="container text-center">
    <div class="row">
      <div class="col">
        <h4>Nome da Conta: <%= @account.name %></h4>
      </div>
    </div>
  </div>
</div>
 <div class="row px-5">
  <div class="col-lg-12">
    <div class="panel-body px-5">
      <div class="container pt-4">
        <form class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label">Nome:</label>
            <div class="col-sm-10">
              <p class="form-control-static"><%= @account.name %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">País:</label>
            <div class="col-sm-10">
              <p class="form-control-static"><%= @account.country %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Conta Principal?:</label>
            <div class="col-sm-10">
              <p class="form-control-static">
                <% if @account.main_account? %>
                  <i class="fa fa-check"></i>
                <% end %>
              </p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Conta de C. Crédito?:</label>
            <div class="col-sm-10">
              <p class="form-control-static">
                <% if @account.credit_account? %>
                  <i class="fa fa-check"></i>
                <% end %>
              </p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Conta Poupança?:</label>
            <div class="col-sm-10">
              <p class="form-control-static">
                <% if @account.savings_account? %>
                  <i class="fa fa-check"></i>
                <% end %>
              </p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Descrição:</label>
            <div class="col-sm-10">
              <p class="form-control-static"><%= @account.description %></p>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-9 m-t-15">
              <%= link_to "Sair", accounts_path, class: "btn btn-white btn-sm waves-effect m-l-5" %>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>








