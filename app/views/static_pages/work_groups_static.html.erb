<div class="row row_frameh">
    <div class="col-lg-9">
      <div class="">
        <div class="">
          <div class="col-lg-12">
            <div class="panel-heading">
              <h3 class="panel-title text-center">Works</h3>
              <div class="btn-group pull-right">
            
          
        
        <div class="">
            <div class="blog-card spring-fever">
                <div class="title-content">
                  <h3>SPRING FEVER</h3>
                  <hr />
                  <div class="intro">Yllamco laboris nisi ut aliquip ex ea commodo.</div>
                </div><!-- /.title-content -->
                <div class="card-info">
                  Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim. 
                </div><!-- /.card-info -->
                <div class="utility-info">
                  <ul class="utility-list">
                    <li class="comments">12</li>
                    <li class="date">03.12.2015</li>
                  </ul>
                </div><!-- /.utility-info -->
                <!-- overlays -->
                <div class="gradient-overlay"></div>
                <div class="color-overlay"></div>
              </div><!-- /.blog-card -->
          <% @user_groups.each do |c| %>
            
            <div class="panel-body">
              <div class="card" style="width: 20rem;">
                
                <div class="card-body">
                  <p class="card-title"><%= image_tag( c.image, class: "rotate90 float:left", size: "140x110" ) if c.image.attached?  %></p>
                  <br>
                  <h5 class="card-title">Nome: <%= c.first_name %> <%= c.last_name %></h5>
                  <h5 class="card-title">Empresa Atual: <%= WorkGroup.find_by(user_group: c.id)&.work&.name %></h5>
                  <i class="fa fa-network"></i>
                  <%= link_to 'Editar', {:controller => "work_groups", :action => "index", :c => c.id }, class: 'btn btn-primary' %>
                </div>
              </div>
           
            
          </div>
          <% end %> 
        </div>
      </div>
    </div>
  </div>
</div>